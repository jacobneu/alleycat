% Streamline the declaration and cross-linking of theorems in the main body and proofs in appendix

    % Declare this to be true when the appendices start
    \newif\ifappendix
    \appendixfalse

    \newcommand{\state}[2][proposition]{%
        \ifappendix%
            \begin{titleless}[\autoref{state:#2}]%
        \else%
            \begin{#1}\label{state:#2}%
        \fi%
            \input{statements/#2}%
        \ifappendix%
            \end{titleless}%
        \else%
            \end{#1}%
        \fi%
    }
    \newcommand{\define}[2][]{%
        \ifappendix%
            \begin{defn}[\autoref{def:#2}]%
        \else%
            \ifx\\#1\\%
                \begin{definition}%
            \else%
                \begin{definition}[#1]%
            \fi%
            \label{def:#2}%
        \fi%
        \input{defn/#2}%
        \ifappendix%
            \end{defn}%
        \else%
            \end{definition}%
        \fi%
    }
    \newcommand{\initDefine}[2][]{%
            \ifx\\#1\\%
                \begin{definition}%
            \else%
                \begin{definition}[#1]%
            \fi%
            \label{def:#2}%
        \input{defn/#2}%
            \end{definition}%
    }
    \newcommand{\Note}[2][]{%
            \ifx\\#1\\%
                \begin{note}%
            \else%
                \begin{note}[#1]%
            \fi%
            \label{note:#2}%
        \input{notes/#2}%
            \end{note}%
    }
    \newcommand{\Example}[2][]{%
            \ifx\\#1\\%
                \begin{example}%
            \else%
                \begin{example}[#1]%
            \fi%
            \label{exm:#2}%
        \input{examples/#2}%
            \end{example}%
    }
    \newcommand{\prove}[2][proposition]{%
        \state[#1]{#2}%
        \begin{proof}%
            \input{proofs/#2}%
        \end{proof}%
        }
    \newcommand{\initProve}[2][proposition]{%
        \begin{#1}\label{state:#2}%
            \input{statements/#2}%
        \end{#1}
        \begin{proof}%
            \input{proofs/#2}%
        \end{proof}%
        }

